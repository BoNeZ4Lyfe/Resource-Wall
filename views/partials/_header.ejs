<head>
  <link href="https://fonts.googleapis.com/css2?family=Reggae+One&display=swap" rel="stylesheet">
</head>
<header>
  <nav>
    <h2 class="app-name"><a href="/resources">FreeSource</a></h2>
    <div>
      <form action="/search" method="GET">
        <label for="search">Search</label>
        <input type="search" name="search" placeholder="search for resources" required>
        <button type="submit" class="btn btn-light">SUBMIT</button>
      </form>
    </div>
    <div>
      <% if (!loggedIn) { %>
        <a href="/login">LOGIN</a>
        <a href="/register">REGISTER</a>
      <% } else { %>
          <form action="/logout" method="POST">
            <label for="logout">Logged in as: <%= username %>!</label>
            <button type="submit" class="btn btn-danger">LOGOUT</button>
          </form>
          <a href="/user-settings">User Settings</a>
      <% } %>
    </div>
  </nav>
</header>
